{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Homework",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/PurnaPerera/Map/main/js/ESP_adm2.json",
    "format": {
          "type": "topojson",
          "feature": "ESP_adm2-1"
        }
  },
  "transform": [{
      "lookup": "properties.NAME_2",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/PurnaPerera/Map/main/data/study.csv"
        },
        "key": "Region",
        "fields": ["Percentage"]
      }
    },
    {"calculate": "datum.Active + 0.1", "as": "Percentage1"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Percentage1",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME_2", "type": "nominal", "title": "Region"},
      {"field": "Percentage", "type": "quantitative"}
    ]
  }

}
